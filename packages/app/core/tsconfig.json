{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["../../ui/src/*"],
      "@utils/*": ["../../utils/src/*"],
      "@features/*": ["../../features/src/*"],
      "@ui/components/*": ["../../ui/src/components/ui/*"],
      "@ui/components/ui/*": ["../../ui/src/components/ui/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
