{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["../../../packages/ui/src/*"],
      "@utils/*": ["../../../packages/utils/src/*"],
      "@features/*": ["../../../packages/features/src/*"],
      "@ui/components/*": ["../../../packages/ui/src/components/ui/*"],
      "@ui/components/ui/*": ["../../../packages/ui/src/components/ui/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
